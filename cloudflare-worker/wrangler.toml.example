# Wrangler configuration for Cloudflare Worker
# Copy this file and update the values before deploying

name = "orcid-endorsement-worker"
main = "worker.js"
compatibility_date = "2024-01-01"

# Environment variables (non-sensitive)
[vars]
ALLOWED_ORIGIN = "https://g5t.github.io"  # Update to your GitHub Pages URL

# KV Namespace bindings
# Replace the IDs with your actual KV namespace IDs from Cloudflare dashboard
[[kv_namespaces]]
binding = "ENDORSEMENTS"
id = "YOUR_ENDORSEMENTS_NAMESPACE_ID_HERE"

[[kv_namespaces]]
binding = "SESSIONS"
id = "YOUR_SESSIONS_NAMESPACE_ID_HERE"

# Secrets (set using: wrangler secret put SECRET_NAME)
# DO NOT put actual secrets in this file!
# 
# To set secrets:
#   wrangler secret put ORCID_CLIENT_ID
#   wrangler secret put ORCID_CLIENT_SECRET
#
# Required secrets:
# - ORCID_CLIENT_ID: Your ORCiD application client ID
# - ORCID_CLIENT_SECRET: Your ORCiD application client secret
